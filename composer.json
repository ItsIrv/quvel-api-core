{
    "name": "quvel/core",
    "description": "Core foundation package for Quvel framework - Device management, push notifications, platform detection, distributed tracing, and more for Laravel applications",
    "keywords": [
        "laravel",
        "quvel",
        "device-management",
        "push-notifications",
        "platform-detection",
        "distributed-tracing",
        "captcha",
        "multi-platform",
        "mobile",
        "pwa"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Irving Gomez",
            "email": "gomirv.work@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/ItsIrv/quvel-api-core/issues",
        "source": "https://github.com/ItsIrv/quvel-api-core"
    },
    "require": {
        "php": "^8.4",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/log": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "illuminate/broadcasting": "^10.0|^11.0|^12.0",
        "illuminate/queue": "^10.0|^11.0|^12.0",
        "illuminate/events": "^10.0|^11.0|^12.0",
        "monolog/monolog": "^3.0",
        "psr/log": "^3.0",
        "ext-curl": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0|^11.0",
        "laravel/pint": "^1.0",
        "phpstan/phpstan": "^1.0",
        "rector/rector": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Quvel\\Core\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Quvel\\Core\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint",
        "format-check": "vendor/bin/pint --test",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=512M",
        "refactor": "vendor/bin/rector process",
        "refactor-dry": "vendor/bin/rector process --dry-run"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Quvel\\Core\\Providers\\CoreServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
